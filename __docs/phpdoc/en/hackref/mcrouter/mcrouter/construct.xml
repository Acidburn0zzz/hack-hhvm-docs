<refentry xml:id="hack.mcrouter.mcrouter.construct" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>MCRouter::__construct</refname>
  <refpurpose>Initialize an MCRouter handle</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
   <modifier>public</modifier>
   <methodname>MCRouter::__construct</methodname>
   <methodparam>
    <type>array&lt;string, mixed&gt;</type>
    <parameter>options</parameter>
   </methodparam>
   <methodparam>
    <type>string</type>
    <parameter>pid</parameter>
    <initializer>""</initializer>
   </methodparam>
  </constructorsynopsis>
  <para>
    See: <link xlink:href="&url.mcrouter.wiki;">The Wiki</link>
    See: <link xlink:href="&url.mcrouter.options.list;">The Options List</link>
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
    <variablelist>
      <varlistentry>
        <term><parameter>options</parameter></term>
        <listitem>
          <para>
            MCRouter options. Must contain, at minimum, one of: config_str or config_file
          </para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term><parameter>pid</parameter></term>
        <listitem>
          <para>
            Persistent ID
          </para>
        </listitem>
      </varlistentry>
    </variablelist>
  </para>
 </refsect1>

</refentry>

